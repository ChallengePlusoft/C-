@{
}
@model Empresa

<h2>Editar Empresa</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ID_EMPRESA" />
    <div>
        <label asp-for="NM_EMPRESA">Nome da Empresa:</label>
        <input asp-for="NM_EMPRESA" class="form-control" />
        <span asp-validation-for="NM_EMPRESA" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="CNPJ_EMPRESA">Cnpj da Empresa:</label>
        <input asp-for="CNPJ_EMPRESA" class="form-control" />
        <span asp-validation-for="CNPJ_EMPRESA" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="DESC_EMPRESA">Descrição da Empresa:</label>
        <input asp-for="DESC_EMPRESA" class="form-control" />
        <span asp-validation-for="DESC_EMPRESA" class="text-danger"></span>
    </div>



    <div class="form-group">
        <button type="submit" class="btn btn-primary">Atualizar Empresa</button>
    </div>
</form>

