@{
}
<!--Declaração do modelo de dados que será utilizado naquela view específica.-->
@model List<Empresa>

<!-- Cabeçalho da página -->
<h2>Empresas</h2>


<table class="table">
    <thead>
  
        <tr>
            <th>ID</th>
            <th>NOME</th>
            <th>CNPJ</th>
            <th>DESCRIÇÃO</th>
            <th>AÇÕES</th>
        </tr>
    </thead>
    <tbody>
        <!-- Loop através da lista de empreas para exibir cada um -->
        @foreach (var empresa in Model)
        {
            
            <tr>

                <td>@empresa.ID_EMPRESA</td>

                <td>@empresa.NM_EMPRESA</td>

                <td>@empresa.CNPJ_EMPRESA</td>

                <td>@empresa.DESC_EMPRESA</td>

                
                <td>
                    <a asp-controller="Empresa" asp-action="Edit" asp-route-ID="@empresa.ID_EMPRESA">Editar</a>



                    <a asp-controller="Empresa" asp-action="Delete" asp-route-ID="@empresa.ID_EMPRESA">Excluir</a>
                </td>


            </tr>
        }
    </tbody>
</table>
<a asp-controller="Empresa" asp-action="Create">Nova Empresa</a>