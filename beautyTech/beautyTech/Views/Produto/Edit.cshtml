@{
}
@model Produto

<h2>Editar Produto</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ID_PRODUTO" />

    <div>
        <label asp-for="NM_PRODUTO">Nome do Produto:</label>
        <input asp-for="NM_PRODUTO" class="form-control" />
        <span asp-validation-for="NM_PRODUTO" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="DESC_PRODUTO">Descrição do Produto:</label>
        <input asp-for="DESC_PRODUTO" class="form-control" />
        <span asp-validation-for="DESC_PRODUTO" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="VL_PRODUTO">Preço:</label>
        <input asp-for="VL_PRODUTO" class="form-control" />
        <span asp-validation-for="VL_PRODUTO" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="DT_FAB_PRODUTO">Data de Fabricação:</label>
        <input asp-for="DT_FAB_PRODUTO" class="form-control" type="date" />
        <span asp-validation-for="DT_FAB_PRODUTO" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="DT_VALIDADE">Data de Validade:</label>
        <input asp-for="DT_VALIDADE" class="form-control" type="date" />
        <span asp-validation-for="DT_VALIDADE" class="text-danger"></span>
    </div>


    <div class="form-group">
        <button type="submit" class="btn btn-primary">Atualizar Produto</button>
    </div>
</form>